
<%= link_to 'Login FB', Koala::Facebook::OAuth.new.url_for_oauth_code(:callback => new_message_url) %>
<%= paginate @messages %>
<table board="1">
<% @messages.each do |message| %>
<% usrid = message.user_id %>
<% user = User.find(usrid) if usrid%>
	<tr>
		<td>
			<img src="<%= user.picture_url if usrid%>" />
		</td>
		<td>
			<a href="<%= user.link if usrid %>"><%= user.name if usrid%></a>
		</td>
   	</tr>
	<tr>
		<td>
			<%= message.content %>
		</td>
		
		<td>
			<%= link_to 'delete', message_path(message), :method => :delete %>
			<%= link_to 'reply', new_response_path%>
		</td>
	</tr>
	<tr>
		<td>
			<%= Response.where(:message_id => message.id).first.content if !(Response.where(:message_id => message.id) == [])%>
		</td>
		<td>
		</td>
	</tr>	  
  <% end %>
</table>
 
<%= link_to 'new message', new_message_path %>