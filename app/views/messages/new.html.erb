<%= form_for @message, :url => messages_path do |f| %>
	<%= render :partial => 'form', :locals => { :f => f }%>
	<%= f.submit "Comment"%>
<% end %>
<%= @access_token %>
<% userfile = @graph.get_object("me")%>
<% userpage = "http://www.facebook.com/" + userfile["username"]%>
<a href="<%= userpage %>"><%= userfile["name"] %></a>
<img src="<%= @graph.get_picture("me") %>" />
